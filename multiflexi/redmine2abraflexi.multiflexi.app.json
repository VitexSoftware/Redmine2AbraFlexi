            "required": false
        },
        "ZABBIX_KEY": {
            "type": "string",
            "description": "Default name for Zabbix Item key name",
            "defval": "redmine2abraflexi-{REDMINE_PROJECT}",
            "required": false
        },
        "EASE_LOGGER": {
            "type": "string",
            "description": "write log messages using",
            "defval": "console|syslog",
            "required": false
        }
